  <body>
    <header>
      <h1>Inventory Management System</h1>
    </header>

    <div class="container">
      <div class="card">
        <h2>Total Products</h2>
        <p><%= totalProducts %></p>
      </div>
      <div class="card">
        <h2>Today's Sales</h2>
        <p><%= todaysSales %></p>
      </div>
      <div class="card">
        <h2>Today's Purchases</h2>
        <p><%= todaysPurchases %></p>
      </div>
    </div>

    <nav>
      <h3>Quick Links</h3>
      <ul>
        <li>
          <a class="nav-button" href="/inventory"
            ><i class="fas fa-box"></i>View Inventory</a
          >
        </li>
        <li>
          <a class="nav-button" href="/addProduct"
            ><i class="fas fa-plus"></i>Add New Product</a
          >
        </li>
      </ul>
      <ul>
        <li>
          <a class="nav-button" href="/addSale"
            ><i class="fas fa-shopping-cart"></i>Add Sale</a
          >
        </li>
        <li>
          <a class="nav-button" href="/addPurchase"
            ><i class="fas fa-shopping-bag"></i>Add Purchase</a
          >
        </li>
        <li>
          <a class="nav-button" href="/view-sales"
            ><i class="fas fa-chart-line"></i>View Sales</a
          >
        </li>
        <li>
          <a class="nav-button" href="/dailyPurchase"
            ><i class="fas fa-chart-line"></i>View Purchases</a
          >
        </li>
      </ul>
    </nav>

    <footer>
      <p>&copy; 2024 Inventory Management System</p>
    </footer>
  </body>
</html>
